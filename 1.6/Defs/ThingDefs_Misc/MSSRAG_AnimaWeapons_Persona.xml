<Defs>
  <RulePackDef>
    <defName>NamerWeaponAnimalink</defName>
    <rulePack>
      <rulesStrings>
        <li>r_weapon_name(p=4)->[suffix][whitespace][noun][verber]</li>
        <li>r_weapon_name(p=3)->[suffix][whitespace][verber]</li>
        <li>r_weapon_name(p=2)->[suffix][whitespace][noun]</li>
        <li>r_weapon_name(p=1)->[suffix][whitespace][NamePerson]</li>
        <li>whitespace -> </li>
        <!-- let me have my fun -->
        <li>suffix->big</li>
        <li>suffix->large</li>
        <li>suffix->girth</li>
        <li>suffix->long</li>
        <li>suffix->hard</li>
        <li>suffix->massive</li>
        <li>suffix->enormous</li>
        <li>suffix->wow, it's</li>
        <li>suffix->terrific</li>
        <li>suffix->small</li>
        <li>suffix->limp</li>
        <li>suffix->tiny</li>
        <li>suffix->pathetic</li>
        <li>suffix->feeble</li>
        <li>suffix->petite</li>
        <li>noun->sacred</li>
        <li>noun->bright</li>
        <li>noun->life</li>
        <li>noun->bloom</li>
        <li>noun->warmth</li>
        <li>noun->heat</li>
        <li>noun->safety</li>
        <li>noun->sanctuary</li>
        <li>noun->home</li>
        <li>noun->oak</li>
        <li>noun->yew</li>
        <li>noun->ash</li>
        <li>noun->tree</li>
        <li>noun->trunk</li>
        <li>noun->leaf</li>
        <li>noun->root</li>
        <li>noun->wood</li>
        <li>noun->log</li>
        <li>noun->growth</li>
        <li>verber->keeper</li>
        <li>verber->bringer</li>
        <li>verber->preserver</li>
        <li>verber->giver</li>
        <li>verber->maker</li>
        <li>verber->saver</li>
        <li>verber->guardian</li>
        <li>verber->knower</li>
        <li>verber->protector</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

