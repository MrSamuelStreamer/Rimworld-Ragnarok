<?xml version="1.0" encoding="utf-8" ?>
 <Defs>
  <!--===== AnimaLog =====-->
  <ThingDef ParentName="ResourceVerbBase">
    <defName>MSSRAG_AnimaLog</defName>
    <label>Anima Branch</label>
    <description>A branch collected from an Anima tree, either through willing sacrifice or through violent means. Contains a latent psychic force within that can be utilised by those with the knowledge.</description>
    <graphicData>
      <texPath>Things/Item/Resource/AnimaLog</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>6.0</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.7</Mass> 
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.8</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.24</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.24</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.80</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>9</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>6</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.20</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.8</BluntDamageMultiplier>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>1</minRewardCount>
    <stuffProps>
      <stuffAdjective>Anima</stuffAdjective>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>0.00</commonality>
      <color>(133,97,67)</color>
      <constructEffect>ConstructWood</constructEffect>
      <appearance>Planks</appearance>
      <soundImpactBullet>BulletImpact_Wood</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Wood</soundImpactMelee>
      <statFactors>
        <MaxHitPoints>0.25</MaxHitPoints>
        <Beauty>2.5</Beauty>
        <Flammability>1</Flammability>
        <WorkToMake>1.7</WorkToMake>
        <WorkToBuild>1.7</WorkToBuild>
        <DoorOpenSpeed>1.25</DoorOpenSpeed>
      </statFactors>
      <canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
    </stuffProps>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <weaponClasses>
      <li>Melee</li>
      <li>MeleeBlunt</li>
      <li>Neolithic</li>
    </weaponClasses>
    <tools>
      <li>
        <label>log</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <allowedArchonexusCount>150</allowedArchonexusCount>
  </ThingDef>

  <!--===== AnimaSap =====-->
  <ThingDef ParentName="ResourceBase">
    <defName>MSSRAG_AnimaSap</defName>
    <label>Crystalised Sap</label>
    <description>Crystalised sap from an anima tree. Contains latent power that can be harnessed by someone knowledgable enough.</description>
    <graphicData>
			<texPath>Things/Item/Resource/AnimaSap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <StuffPower_Armor_Sharp>0.36</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.18</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>18</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>18</StuffPower_Insulation_Heat>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>5</MarketValue>
      <Mass>0.026</Mass>
      <Flammability>1.2</Flammability>
      <DeteriorationRate>4</DeteriorationRate>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>30</minRewardCount>
    <stuffProps>
      <color>(180.3, 215.5, 202.4)</color>
      <commonality>0.0001</commonality>
      <statFactors>
        <Flammability>1.2</Flammability>
        <Beauty>1</Beauty>
      </statFactors>
	  <statOffsets>
	    <PsychicSensitivityOffset>0.02</PsychicSensitivityOffset>
		<PsychicEntropyRecoveryRate>0.01</PsychicEntropyRecoveryRate>
	  </statOffsets>
    </stuffProps>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
  </ThingDef>
</Defs>